<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		  xmlns:m="clr-namespace:Mesen"
		  xmlns:v="using:Mesen.Views"
		  xmlns:vm="using:Mesen.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		  xmlns:mui="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="512" d:DesignHeight="505"
		  Icon="/Assets/Icon.ico"
        x:Class="Mesen.Windows.MainWindow"
		  Width="512" Height="505"
		  DragDrop.AllowDrop="True"
        Title="Mesen-S">

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>

	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Open..." Click="OnOpenClick">
					<MenuItem.Icon>
						<mui:MaterialIcon Kind="FolderOpen" />
					</MenuItem.Icon>
				</MenuItem>
				<Separator/>
				<MenuItem Header="_Exit"/>
			</MenuItem>
			<MenuItem Header="_Game">
				<MenuItem Header="Reset" Click="OnResetClick" />
				<MenuItem Header="Power Cycle" Click="OnPowerCycleClick" />
				<Separator />
				<MenuItem Header="Switch disk side" Click="OnFdsSwitchDiskSide" />
				<MenuItem Header="Select disk">
					<MenuItem Header="Disk 1 Side A" Click="OnFdsInsertDisk0" />
					<MenuItem Header="Disk 1 Side B" Click="OnFdsInsertDisk1" />
				</MenuItem>
				<MenuItem Header="Eject disk" Click="OnFdsEjectDisk" />
			</MenuItem>
			<MenuItem Header="_Options">
				<MenuItem Header="Speed" />
				<MenuItem Header="Video Size" />
				<MenuItem Header="Video Filter" />
				<MenuItem Header="Region" />
				<Separator />
				<MenuItem Header="_Settings" Click="OnOptionsClick">
					<MenuItem.Icon>
						<mui:MaterialIcon Kind="Settings" />
					</MenuItem.Icon>
				</MenuItem>
			</MenuItem>
			<MenuItem Header="_Tools">
				<MenuItem Header="Log Window" Click="OnLogWindowClick" />
				<MenuItem Header="Start recording" Click="OnStartRecordingClick" />
				<MenuItem Header="Stop recording" Click="OnStopRecordingClick" />
			</MenuItem>
			<MenuItem Header="_Debug">
				<MenuItem Header="_Debugger" Click="OnDebuggerClick">
					<MenuItem.Icon>
						<mui:MaterialIcon Kind="Bug" />
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="_Memory Tools" Click="OnMemoryToolsClick">
					<MenuItem.Icon>
						<mui:MaterialIcon Kind="Memory" />
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="_Tile Viewer" Click="OnTileViewerClick">
					<MenuItem.Icon>
						<mui:MaterialIcon Kind="Till" />
					</MenuItem.Icon>
				</MenuItem>
			</MenuItem>
		</Menu>
		<Panel DockPanel.Dock="Bottom" IsVisible="{Binding ShowAudioPlayer}">
			<v:AudioPlayerView DataContext="{Binding AudioPlayer}" />
		</Panel>
		<Panel>
			<m:NativeRenderer Name="Renderer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
		</Panel>
	</DockPanel>
</Window>
