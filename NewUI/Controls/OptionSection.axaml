<ItemsControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="50"
	xmlns:c="using:Mesen.Controls"
	x:Name="root"
	HorizontalAlignment="Stretch"
	Margin="0 15 0 0"
	x:Class="Mesen.Controls.OptionSection"
>
	<ItemsControl.Template>
		<ControlTemplate>
			<StackPanel DataContext="{Binding ElementName=root}">
				<c:SectionHeader Content="{Binding Header}" Margin="0 0 0 5" />
				<StackPanel Margin="10 0 0 0">
					<ItemsPresenter Items="{Binding Items}" />
				</StackPanel>
			</StackPanel>
		</ControlTemplate>
	</ItemsControl.Template>
</ItemsControl>