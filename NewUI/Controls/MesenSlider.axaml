<UserControl 
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="50"
	x:Name="root"
	HorizontalAlignment="Stretch"
	x:Class="Mesen.Controls.MesenSlider"
>
	<Panel DataContext="{Binding ElementName=root}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
		<Panel VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="-38 2 0 0">
			<TextBlock Text="{Binding Text}" Margin="0" HorizontalAlignment="Center" />
		</Panel>

		<DockPanel>
			<TextBox
				DockPanel.Dock="Right"
				Text="{Binding Value}"
				VerticalAlignment="Center"
				Margin="4"
				IsReadOnly="True"
				HorizontalContentAlignment="Center"
				IsVisible="{Binding !HideValue}"
			/>
			
			<Slider
				Minimum="{Binding Minimum}"
				Margin="0 -3 0 0"
				Maximum="{Binding Maximum}"
				Value="{Binding Value}"
				TickPlacement="BottomRight"
				TickFrequency="{Binding TickFrequency}"
				PropertyChanged="Slider_OnPropertyChanged"
				LargeChange="5"
				SmallChange="1"
		/>
		</DockPanel>
	</Panel>
</UserControl>