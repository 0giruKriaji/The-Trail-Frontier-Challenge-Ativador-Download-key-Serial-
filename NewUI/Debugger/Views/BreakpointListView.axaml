<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="using:Mesen.Debugger.ViewModels"
	mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="110"
	VerticalAlignment="Stretch"
	HorizontalAlignment="Stretch"
	x:Class="Mesen.Debugger.Views.BreakpointListView"
>
	<Design.DataContext>
		<vm:BreakpointListViewModel />
	</Design.DataContext>

	<Border BorderThickness="1" BorderBrush="LightGray">
		<DataGrid
			Items="{Binding Breakpoints}"
			CanUserSortColumns="True"
			CanUserResizeColumns="True"
			CanUserReorderColumns="True"
			SelectionMode="Extended"
			FontFamily="Microsoft Sans Serif"
			GridLinesVisibility="All"
			Tapped="OnGridClick"
			IsReadOnly="True"
		>
			<DataGrid.Columns>
				<DataGridCheckBoxColumn Header="E" Binding="{Binding Enabled}" Width="21" />
				<DataGridCheckBoxColumn Header="M" Binding="{Binding MarkEvent}" Width="21" />
				<DataGridTextColumn Header="Type" Binding="{Binding TypeDisplay}" Width="3*" CanUserResize="True"  />
				<DataGridTextColumn Header="Address" Binding="{Binding AddressDisplay}" Width="3*" CanUserResize="True" />
				<DataGridTextColumn Header="Condition" Binding="{Binding Condition}" Width="3*" CanUserResize="True" />
			</DataGrid.Columns>
		</DataGrid>
	</Border>
</UserControl>
