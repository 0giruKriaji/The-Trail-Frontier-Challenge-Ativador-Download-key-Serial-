<Window
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:m="clr-namespace:Mesen"
	xmlns:vm="using:Mesen.Debugger.ViewModels"
	xmlns:dbg="using:Mesen.Debugger"
	xmlns:v="using:Mesen.Debugger.Views"
	xmlns:dc="using:Mesen.Debugger.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:id="clr-namespace:Dock.Avalonia;assembly=Dock.Avalonia"
	xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
	xmlns:dm="clr-namespace:Dock.Model;assembly=Dock.Model.Avalonia"
	xmlns:dmc="clr-namespace:Dock.Model.Controls;assembly=Dock.Model.Avalonia"
	mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
	x:Class="Mesen.Debugger.Windows.DebuggerWindow"
	x:DataType="vm:DebuggerWindowViewModel"
	Icon="/Assets/Debugger.png"
	Width="1000" Height="600"
	Title="Debugger"
	x:Name="Debugger"
>
	<Design.DataContext>
		<vm:DebuggerWindowViewModel />
	</Design.DataContext>

	<Window.Styles>
		<Style Selector="TabStrip:singleitem">
			<Setter Property="IsVisible" Value="False" />
		</Style>
	</Window.Styles>
	
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="View">
				<MenuItem Command="{CompiledBinding ShowBreakpointsCommand}" Header="Show breakpoints" />
				<MenuItem Command="{CompiledBinding ShowCpuStatusCommand}" Header="Show CPU status" />
				<MenuItem Command="{CompiledBinding ShowPpuStatusCommand}" Header="Show PPU status" />
			</MenuItem>
		</Menu>
		<StackPanel Classes="Toolbar" Orientation="Horizontal" DockPanel.Dock="Top">
			<Button ToolTip.Tip="Continue" Click="OnContinueClick">
				<Image Source="/Assets/MediaPlay.png" />
			</Button>
			<Button ToolTip.Tip="Break" Click="OnStepIntoClick">
				<Image Source="/Assets/MediaPause.png" />
			</Button>
			<Line />
			<Button ToolTip.Tip="Step Into" Click="OnStepIntoClick">
				<Image Source="/Assets/StepInto.png" />
			</Button>
			<Button ToolTip.Tip="Step Over" Click="OnStepOverClick">
				<Image Source="/Assets/StepOver.png"/>
			</Button>
			<Button ToolTip.Tip="Step Out" Click="OnStepOutClick">
				<Image Source="/Assets/StepOut.png"/>
			</Button>
			<Button ToolTip.Tip="Step Back" Click="OnStepBackClick">
				<Image Source="/Assets/StepBack.png"/>
			</Button>
			<Line />
			<Button ToolTip.Tip="Run 1 PPU cycle" Click="OnRunOnePpuCycleClick">
				<Image Source="/Assets/RunPpuCycle.png"/>
			</Button>
			<Button ToolTip.Tip="Run 1 PPU scanline" Click="OnRunOnePpuScanlineClick">
				<Image Source="/Assets/RunPpuScanline.png"/>
			</Button>
			<Button ToolTip.Tip="Run 1 PPU frame" Click="OnRunOnePpuFrameClick">
				<Image Source="/Assets/RunPpuFrame.png"/>
			</Button>
		</StackPanel>
		<idc:DockControl Layout="{CompiledBinding DockLayout}"/>
	</DockPanel>
</Window>
