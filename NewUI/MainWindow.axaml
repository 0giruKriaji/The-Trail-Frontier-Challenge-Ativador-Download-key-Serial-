<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		  xmlns:m="clr-namespace:Mesen"
		  xmlns:vm="using:Mesen.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="Mesen.MainWindow"
		  Width="400" Height="400"
        Title="Test">

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>

	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Open..."/>
				<Separator/>
				<MenuItem Header="_Exit"/>
			</MenuItem>
			<MenuItem Header="_Options">
				<MenuItem Header="_Audio" Click="OnAudioClick"/>
				<MenuItem Header="_Video"/>
			</MenuItem>			
			<MenuItem Header="_Debug" Click="OnButtonClick" />
		</Menu>
		<Panel Background="Black">
			<m:NativeRenderer Name="Renderer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
		</Panel>
	</DockPanel>
</Window>
